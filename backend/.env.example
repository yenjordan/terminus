# Application Settings
APP_VERSION=1.0.0
APP_NAME="FastAPI React Starter"
APP_DESCRIPTION="FastAPI React Starter Template"

# Database Settings
# SQLite Configuration (Default)
DATABASE_URL="sqlite+aiosqlite:///./app.db"

# PostgreSQL Configuration (Optional)
# Uncomment and fill these values to use PostgreSQL instead of SQLite
#DB_NAME=your_database_name
#DB_USER=your_database_user
#DB_PASSWORD=your_database_password
#DB_HOST=localhost
#DB_PORT=5432

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false
#DB_SSL_MODE=disable  # Options: disable, allow, prefer, require, verify-ca, verify-full

# CORS Settings
CORS_ORIGINS=["http://localhost:5173"]

# Environment
ENVIRONMENT=development  # Options: development, production, testing
